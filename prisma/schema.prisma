generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model Well {
  id                    Int       @id @default(autoincrement())
  createdAt             DateTime  @default(now())
  updatedAt             DateTime  @updatedAt
  name                  String
  type                  String?
  use_type              String?
  start_date            DateTime?
  expected_date         DateTime?
  location              String?
  status                String?
  average_ph            Int?
  average_conductivity  Int?
  average_price         Int?
  Percent_of_village_ws Float?
  district              District  @relation(fields: [districtId], references: [id])
  districtId            Int
  village               Village   @relation(fields: [villageId], references: [id])
  villageId             Int
  region                Region    @relation(fields: [regionId], references: [id])
  regionId              Int
}

model Village {
  id         Int      @id @default(autoincrement())
  name       String
  popolation Int?
  district   District @relation(fields: [districtId], references: [id])
  districtId Int
  Well       Well[]
  Region     Region?  @relation(fields: [regionId], references: [id])
  regionId   Int?
}

model District {
  id               Int       @id @default(autoincrement())
  name             String
  water_connection Boolean
  region           Region    @relation(fields: [regionId], references: [id])
  regionId         Int
  Well             Well[]
  Village          Village[]
}

model Region {
  id       Int        @id @default(autoincrement())
  name     String
  Well     Well[]
  Village  Village[]
  District District[]
}
